@{
    ViewBag.Title = "Die Throw";
}
@model UI.Models.HomeIndexModel

<div class="jumbotron">
    <h1>Die Throw Technical Test</h1>
    <p class="lead">Guy Harwood Solution for Die Throw Technical Test</p>
</div>

<div class="row">
    <div class="col-md-12">
        @*            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-inline" }))*@
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <div class="col-sm-4">
                    <input type="text" id="ThrowCount" name="ThrowCount" class="form-control" placeholder="Number of times to throw the die"/>
                </div>
                <div class="col-sm-8">
                    <button type="submit" class="btn btn-primary btn-default">Throw</button>
                </div>
                <div class="form-group">
                    <label>@Model.LargestStreak</label>
                </div>
            </div>
        }
    </div>
</div>